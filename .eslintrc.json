{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
         {
           "ts": "never"
         }
      ],
      "class-methods-use-this": "off",
      "import/prefer-default-export": "off"
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
}
